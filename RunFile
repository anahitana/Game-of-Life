public class run {
    public static void main(String[] args) {
        int N = 500;
        char type = 'T';

        Sim247 demo = new Sim247(N, type);

        demo.draw();

        for (int i = 0; i < N; i++) {
            try {
                Thread.sleep(350);
            } catch (Exception ex) {
            }
            demo.update();
            demo.draw();

        }
    }
}
